{
    "name": "image-annotator",
    "main": "dist-main/index.js",
    "author": {
        "name": "Paul Fischer",
        "email": "paul.fischer@mailbox.org",
        "url": "https://github.com/paulhfischer"
    },
    "version": "1.2.1",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "package:publish": "electron-builder --config electron-builder.config.js --publish always",
        "package": "electron-builder --config electron-builder.config.js",
        "typecheck:main": "tsc -p src/main/tsconfig.json --noEmit",
        "typecheck:preload": "tsc -p src/preload/tsconfig.json --noEmit",
        "typecheck:renderer": "tsc -p src/renderer/tsconfig.json --noEmit",
        "lint": "eslint . --ext js,ts,tsx --fix",
        "prettier": "prettier . --list-different --write"
    },
    "eslintConfig": {
        "root": true,
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint",
            "html",
            "jinja2-processor"
        ],
        "extends": [
            "airbnb",
            "airbnb/hooks",
            "airbnb-typescript",
            "plugin:prettier/recommended"
        ],
        "parserOptions": {
            "project": [
                "./tsconfig.node.json",
                "./tsconfig.renderer.json"
            ],
            "createDefaultProgram": true
        },
        "env": {
            "browser": true,
            "commonjs": true,
            "es6": true,
            "node": true
        },
        "settings": {
            "html/report-bad-indent": "error",
            "import/core-modules": [
                "electron"
            ]
        },
        "rules": {
            "import/no-extraneous-dependencies": [
                "error",
                {
                    "devDependencies": true
                }
            ]
        },
        "ignorePatterns": [
            "dist-main/",
            "dist-preload/",
            "dist-renderer/"
        ]
    },
    "prettier": "@paulhfischer/prettier-config",
    "devDependencies": {
        "@paulhfischer/prettier-config": "1.9.0",
        "@types/node": "^20.10.2",
        "@types/papaparse": "^5.3.14",
        "@types/react": "^18.2.41",
        "@types/react-dom": "^18.2.17",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "@vitejs/plugin-react": "^4.2.0",
        "electron": "^27.1.3",
        "electron-builder": "^24.9.1",
        "eslint": "^8.55.0",
        "eslint-config-airbnb": "19.0.4",
        "eslint-config-airbnb-typescript": "17.1.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-html": "7.1.0",
        "eslint-plugin-jinja2-processor": "1.2.0",
        "eslint-plugin-prettier": "5.0.1",
        "typescript": "^5.3.2",
        "vite": "^5.0.4",
        "vite-plugin-electron": "^0.15.4",
        "vite-plugin-electron-renderer": "^0.14.5"
    },
    "dependencies": {
        "@fluentui/react-components": "^9.42.0",
        "@fluentui/react-icons": "^2.0.223",
        "csv-stringify": "^6.4.4",
        "electron-dialog": "^2.0.0",
        "electron-unhandled": "^4.0.1",
        "image-size": "^1.0.2",
        "papaparse": "^5.4.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "sqlite3": "^5.1.6"
    }
}
